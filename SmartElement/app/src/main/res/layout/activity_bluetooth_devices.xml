<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_paired_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#666"
        android:gravity="center"
        android:padding="10dp"
        android:text="Wybierz przeciwnika"
        android:textColor="#fff"
        android:textSize="36sp" />

    <ListView
        android:id="@+id/paired_devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:stackFromBottom="false" />

    <TextView
        android:id="@+id/title_new_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#666"
        android:padding="10dp"
        android:text="Nie widzisz przeciwnika?\nJeśli grasz z kimś po raz pierwszy najpierw sparuj urządzenia"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_bluetooth_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openBluetoothSettings"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="Paruj"
        android:textSize="20sp" />

</LinearLayout>
